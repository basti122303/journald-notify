{
    "notifiers": {
        "pushbullet": {
            "type": "pushbullet",
            "config": {
                "key": "myapikey",
                "prepend_hostname": true
            }
        },
        "email": {
            "type": "smtp",
            "enabled": false,
            "config": {
                "host": "my-smtp-server.example.com",
                "from_addr": "Test User <test@example.com>",
                "to_addrs": ["othertest@example.com"],
                "port": 465,
                "tls": true,
                "username": "myuser",
                "password": "mypass",
                "retry_interval": 30
            }
        },
        "libnotify": {
            "type": "notify-send",
            "config": {
                "retry_interval": 10
            }
        }
    },
    "filters": [
        {
            "match": "(?P<username>.+) : .+ ; PWD=(?P<pwd>.+) ; USER=(?P<became.+) ; COMMAND=(?P<cmd>.+)",
            "services": ["sudo"],
            "notifiers": ["pushbullet", "email"],
            "conditions": {
                "username": {
                    "type": "exclude",
                    "exclude": ["root"]
                },
                "cmd": {
                    "type": "exclude",
                    "exclude": ["^\/usr\/s?bin\/notify-send-headless "]
                }
            }
        },
        {
            "match": "Accepted password for (?P<username>.+) from (?P<ip>.+) ",
            "services": ["sshd"],
            "notifiers": ["pushbullet", "libnotify"]
        },
        {
            "match": "(?P<message>.*)",
            "field_conditions": {
                "PRIORITY": {
                    "type": "lte",
                    "value": 3
                }
            }
        }
    ],
    "settings": {
        "boot": {
            "notify": true,
            "add_public_ip": true,
            "add_local_ips": true,
            "notifiers": ["pushbullet", "email"]

        },
        "settings": {
            "reader": {
                "path": "/var/log/journal/remote"
            }
        }
    }
}
